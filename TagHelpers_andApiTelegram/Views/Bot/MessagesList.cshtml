@model List<Msg>
@{
    
}
@foreach (Msg m in Model)
{
    <div style="border: 1px solid black; padding: 10px 6px">
        <p style="width=200px;">@m.SenderName: @m.Text</p>

        @if(m.ImageBytes != null)
        {
        try
        {
        Stream stream = new MemoryStream(m.ImageBytes);
        string destinationFilePath = "image.jpg";

        using (FileStream outputFileStream = new FileStream("image.jpg", FileMode.Create))
        {
        stream.CopyTo(outputFileStream);
        }

        <img style="width: 100px;" src="data:image/jpeg;base64,@(Convert.ToBase64String(m.ImageBytes))" alt="img" />
        }
        catch{}
        }
    </div>
    <br />
}